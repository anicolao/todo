rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /lists/{listId}/{document=**} {
      allow create: if request.auth != null && !exists(/databases/$(database)/lists/$(listId));
      allow read, write: if request.auth != null &&
												(exists(/databases/$(database)/editors/$(listId)/$(request.auth.uid)));
		}
    match /editors/{listId}/{uid} {
      allow delete: if request.auth != null && exists(/databases/$(database)/editors/$(listId)/$(request.auth.uid));
      allow create: if request.auth != null && 
         (exists(/databases/$(database)/editors/$(listId)/$(request.auth.uid)) ||
				 !(exists(/databases/$(database)/editors/$(listId)) && uid == request.auth.uid));
		}
    match /share/{uid}/{document=**} {
      allow read, write: if request.auth != null;
		}
    match /visible/{uid}/{document=**} {
      allow read, write: if request.auth != null && uid == request.auth.uid;
		}
	}
}
