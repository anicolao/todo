rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /lists/{listId}/{document=**} {
      allow create: if request.auth != null && !exists(/databases/$(database)/documents/lists/$(listId));
      allow read, write: if request.auth != null &&
												(exists(/databases/$(database)/documents/editors/$(listId)) &&
												 exists(/databases/$(database)/documents/editors/$(listId)/$(request.auth.uid)/editor));
		}
    match /editors/{listId}/{uid}/editor {
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/editors/$(listId)/$(request.auth.uid)/editor);
      allow create: if request.auth != null && 
         (exists(/databases/$(database)/documents/editors/$(listId)/$(request.auth.uid)/editor) ||
				 (!exists(/databases/$(database)/documents/editors/$(listId)) && uid == request.auth.uid));
		}
    match /share/{document=**} {
      allow read, write: if request.auth != null;
		}
    match /visible/{uid}/{document=**} {
      allow read, write: if request.auth != null && uid == request.auth.uid;
		}
	}
}
